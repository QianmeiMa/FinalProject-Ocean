<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/homebg"
        android:layout_alignParentTop="true"
        android:id="@+id/imageView" />



    <Button
        android:id="@+id/diaryButton"
        android:onClick="diaryButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/star"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <Button
        android:id="@+id/photoButton"
        android:onClick="photoButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ins"
        android:layout_marginRight="77dp"
        android:layout_marginEnd="77dp"
        android:layout_alignTop="@+id/diaryButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan"
        android:textSize="25sp"
        android:layout_above="@+id/planButton"
        android:layout_alignTop="@+id/planButton"
        android:layout_alignBottom="@+id/planButton"
        android:layout_alignRight="@+id/planButton"
        android:layout_alignEnd="@+id/planButton"
        android:id="@+id/textView2" />

    <Button
        android:id="@+id/planButton"
        android:onClick="planButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/clock"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/diaryButton"
        android:layout_alignLeft="@+id/diaryButton"
        android:layout_alignStart="@+id/diaryButton" />

    <Button
        android:id="@+id/secretButton"
        android:onClick="secretButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/heart"
        android:layout_alignTop="@+id/planButton"
        android:layout_alignLeft="@+id/photoButton"
        android:layout_alignStart="@+id/photoButton" />



    <Button
        android:id="@+id/mailButton"
        android:onClick="mailButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/mail2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <Button
        android:id="@+id/findButton"
        android:onClick="findButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/find"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/secretButton"
        android:layout_alignEnd="@+id/secretButton"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp" />

    <Button
        android:id="@+id/friendButton"
        android:onClick="friendButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/friend"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/secretButton"
        android:layout_toEndOf="@+id/secretButton" />


</RelativeLayout>
