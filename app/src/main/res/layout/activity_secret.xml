<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/secret_writing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/photopage2" />

    <EditText
        android:id="@+id/secretEditText_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:inputType="textMultiLine"
        android:layout_below="@+id/secret_writing"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/secretEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Writing"
        android:inputType="textMultiLine"
        android:layout_below="@+id/secretEditText_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>